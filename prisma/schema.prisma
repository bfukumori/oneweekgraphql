generator client {
  provider = "prisma-client-js"
}

datasource db {
  // provider = "postgresql"
  // url      = env("DATABASE_URL")
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Cart {
  id    String     @id @default(uuid())
  items CartItem[]
}

model CartItem {
  id          String  @default(uuid())
  name        String
  description String?
  price       Int
  quantity    Int
  image       String?

  cartId String
  cart   Cart   @relation(fields: [cartId], references: [id], onDelete: Cascade)

  @@id([id, cartId])
}
